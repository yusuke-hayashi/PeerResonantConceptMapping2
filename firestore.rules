rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to get user document
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if user is a teacher
    function isTeacher() {
      return isAuthenticated() && getUserData().role == 'teacher';
    }

    // Helper function to check if user is a student
    function isStudent() {
      return isAuthenticated() && getUserData().role == 'student';
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if isAuthenticated() && (isOwner(userId) || isTeacher());

      // Allow users to create their own document (during signup)
      allow create: if isAuthenticated() && isOwner(userId);

      // Allow users to update their own document, or teachers to update student's teacherId
      allow update: if isAuthenticated() && (
        isOwner(userId) ||
        (isTeacher() && resource.data.role == 'student')
      );

      // Only allow deletion by the owner
      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // Topics collection
    match /topics/{topicId} {
      // All authenticated users can read topics
      allow read: if isAuthenticated();

      // Only teachers can create, update, delete topics
      allow create, update, delete: if isTeacher();
    }

    // Concept Maps collection
    match /concept_maps/{mapId} {
      // Users can read maps they own, or if they are the teacher of the owner
      allow read: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        isTeacher()
      );

      // Users can create maps for themselves
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;

      // Users can update/delete their own maps
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    // Comparisons collection
    match /comparisons/{comparisonId} {
      // Teachers can read all comparisons they created
      // Students can read comparisons where they have permission
      allow read: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid ||
        isTeacher()
      );

      // Only teachers can create comparisons
      allow create: if isTeacher();

      // Only the creator can update/delete
      allow update, delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }

    // Comparison Permissions collection
    match /comparison_permissions/{permissionId} {
      // Teachers can read all permissions
      // Students can read their own permissions
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        isTeacher()
      );

      // Only teachers can manage permissions
      allow create, update, delete: if isTeacher();
    }
  }
}
